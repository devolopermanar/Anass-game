<script>
  const music = document.getElementById('bgMusic');
  
  function changeFlavor() {
    music.play();
    const cake = document.getElementById('mainCake');
    cake.style.background = cake.style.background === 'rgb(110, 70, 58)' ? '#f9e79f' : '#6e463a';
  }

  function toggleDec(id) {
    music.play();
    document.getElementById(id).classList.toggle('show');
  }

